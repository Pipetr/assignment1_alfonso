<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!-- Back Button -->
        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/fa_solid_900"
            />

        <!-- Movie Poster -->
        <ImageView
            android:id="@+id/imagePoster"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/movie_poster"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbMovieTitle"
            android:textSize="@dimen/textSizeHeader"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Rated -->
        <TextView
            android:id="@+id/textRated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbRating"
            android:textSize="@dimen/textSizeReg"
            android:textColor="#666666"
            android:layout_marginBottom="4dp" />

        <!-- Released -->
        <TextView
            android:id="@+id/textReleased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbRelease"
            android:textSize="@dimen/textSizeReg"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Runtime -->
        <TextView
            android:id="@+id/textRuntime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lbDuration"
            android:textSize="@dimen/textSizeReg"
            android:textColor="#666666"
            android:layout_marginBottom="16dp" />

        <!-- Plot -->
        <TextView
            android:id="@+id/textPlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lbPlot"
            android:textSize="16sp"
            android:textColor="#333333"
            android:lineSpacingExtra="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>